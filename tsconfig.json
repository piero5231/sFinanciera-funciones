{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node16",
    "checkJs": false,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["src/types"],
    "lib":["ES2020", "DOM"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
